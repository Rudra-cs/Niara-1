<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_95sdp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_pdt_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_16sdp"
        android:elevation="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_pdt_order_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:scaleType="centerCrop"
                android:background="@color/grey"/>

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_food_order_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="Food Title"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <TextView
                    android:id="@+id/tv_food_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="Status: "
                    android:layout_below="@+id/tv_food_order_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <TextView
                    android:id="@+id/tv_food_order_status_req"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Accepted"
                    android:layout_below="@+id/tv_food_order_title"
                    android:layout_toRightOf="@+id/tv_food_order_status"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

                <TextView
                    android:id="@+id/tv_food_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="20/11/2021"
                    android:layout_below="@+id/tv_food_order_status"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    android:maxLines="1"
                    android:maxLength="16"
                    android:ellipsize="end"
                    />


                <TextView
                    android:id="@+id/tv_food_order_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:text="Need Help?"
                    android:layout_below="@+id/tv_food_order_status"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/purple_700"
                    android:textSize="@dimen/_11ssp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>